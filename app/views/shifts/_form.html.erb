<%= form_for(@shift) do |f| %>
  <% if @shift.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul>
      <% @shift.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.select("user_id", User.all.collect {|u| [ u.username, u.id ] }, { include_blank: false }) %>
  </div>
  <div class="field">
    <%= f.label :location_id %><br>
    <%= f.select("location_id", Location.all.collect {|l| [ l.location_name, l.id ] }, { include_blank: false }) %>
  </div>
  <div class="field">
    <%= f.label :weather_id %><br>
    <%= f.select("weather_id", Weather.all.collect {|w| [ w.weather, w.id ] }, { include_blank: false }) %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
