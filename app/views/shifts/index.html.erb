<p id="notice"><%= notice %></p>

<h1>Listing Shifts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Location</th>
      <th>Weather</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <% user = User.find(shift.user_id) %>
        <td><%= user.username %></td>
        <% location = Location.find(shift.location_id) %>
        <td><%= location.location_name %></td>
        <% weather = Weather.find(shift.weather_id) %>
        <td><%= weather.weather.capitalize %></td>
        <td><%= shift.start_time.strftime("%a, %b %d %Y, %I:%M %P") %></td>
        <td><%= shift.end_time.strftime("%a, %b %d %Y, %I:%M %P") %></td>
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

