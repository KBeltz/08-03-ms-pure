<!--logout and last updated-->
<div class="container" id="logout_last_updated">
  <div class="row">
    <div class="col-md-6  toppad  pull-right col-md-offset-3 ">
      <p><%= link_to 'Back', "/profile" %></p>
      <p class=" text-info"><%= link_to(' Logout', destroy_user_session_path, :method => :delete, :class => "glyphicon glyphicon-log-out ") %></p>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >

<!-- accordion -->
<div class="accordion vertical">
    <ul>
      <!-- cyclists panel -->
      <li>
          <input type="checkbox" id="checkbox-3" name="checkbox-accordion" />
          <label for="checkbox-3">Cyclists</label>
          <div class="content">
            <div class="panel panel-info collapse in" id="profile_panel">
              <div class="panel-heading">
                <h3 class="panel-title">Cyclist Data</h3>
              </div>

              <div class="panel-body">
                <!-- TODO Use Rails ERB tag. form_for -->
                <%= form_tag("/cyclists", method: "post") do %>
                <div class="row">
                  <div class=" col-md-9 col-lg-9 ">
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="form-group">
                          <h3 class="panel-title">Quantity</h3>
                            <select name="cyclist[quantity]">
                            <% x = 1 %>
                              <%= while x != 11 do %>
                                <option value="<%= x %>">
                                  <%= x %>
                                </option>
                                <% x += 1 %>
                              <% end %>
                            </select>
                          <br><br>
                          <h3 class="panel-title">Sex</h3><br>
                            <input id="radio" type="radio" name="cyclist[sex]" value=true> Male<br>
                            <input id="radio" type="radio" name="cyclist[sex]" value=false> Female<br>
                        </div>
                      </div><!-- Col -->

                      <div class="col-sm-6">
                        <div class="form-group">
                          <h3 class="panel-title">Description</h3><br>
                            <p>Is the cyclist wearing a helmet?</p>
                              <input id="radio" type="radio" name="cyclist[helmet]" value=true> Yes
                              <input id="radio" type="radio" name="cyclist[helmet]" value=false> No<br><br>
                            <p>Is the cyclist riding on the sidewalk?</p>
                              <input id="radio" type="radio" name="cyclist[sidewalk]" value=true> Yes
                              <input id="radio" type="radio" name="cyclist[sidewalk]" value=false> No<br><br>
                            <p>Is the cyclist riding against the flow of traffic?</p>
                              <input id="radio" type="radio" name="cyclist[wrong_way]" value=true> Yes
                              <input id="radio" type="radio" name="cyclist[wrong_way]" value=false> No<br>
                          <input type="hidden" name="shift[id]" value="<%= params['id'] %>">
                        </div>
                      </div><!-- Col -->
                    </div><!-- Row -->
                  </div>
                </div>
                </div>
              <!-- cyclist panel footer-->
              <div class="panel-footer" id="profile_panel_footer">
                <a href="mailto:email@example.com?Subject=Bike/Ped%20Count" target="_top" data-original-title="Broadcast Message" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-envelope"></i></a>
                <span class="pull-right">
                  <button type="submit" class="btn btn-success">Submit</button>
                </span>
                <% end %>
              </div>
          </div>
        </div>
      </li>
      <!-- cyclists panel end -->
      <!-- pedestrians panel -->
      <li>
          <input type="checkbox" id="checkbox-4" name="checkbox-accordion" />
          <label for="checkbox-4">Pedestrians</label>

          <div class="content">
            <div class="panel panel-info collapse in" id="profile_panel">
              <div class="panel-heading">
                <h3 class="panel-title">Pedestrian Data</h3>
              </div>

              <div class="panel-body">
                <%= form_tag("/pedestrians", method: "post") do %>
                <div class="row">
                  <div class=" col-md-9 col-lg-9 ">
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="form-group">
                          <h3 class="panel-title">Quantity</h3>
                            <select name="pedestrian[quantity]">
                            <% x = 1 %>
                              <%= while x != 11 do %>
                                <option value="<%= x %>">
                                  <%= x %>
                                </option>
                                <% x += 1 %>
                              <% end %>
                            </select>
                          <br><br>
                          <h3 class="panel-title">Sex</h3><br>
                            <input id="radio" type="radio" name="pedestrian[sex]" value=true> Male<br>
                            <input id="radio" type="radio" name="pedestrian[sex]" value=false> Female<br>
                        </div>
                      </div><!-- Col -->

                      <div class="col-sm-6">
                        <div class="form-group">
                          <h3 class="panel-title">Description</h3><br>
                            <p>Is the pedestrian disabled?</p><br>
                              <input id="radio" type="radio" name="pedestrian[disabled]" value=true> Yes
                              <input id="radio" type="radio" name="pedestrian[disabled]" value=false> No<br><br>
                            <p>Other (rollerblades, segway, etc.)</p><br>
                              <input id="radio" type="radio" name="pedestrian[other]" value=true> Yes
                              <input id="radio" type="radio" name="pedestrian[other]" value=false> No<br>
                          <input type="hidden" name="shift[id]" value="<%= params['id'] %>">
                        </div>
                      </div><!-- Col -->
                    </div><!-- Row -->
                  </div>
                </div>
                </div>
              <!-- pedestrian panel footer-->
              <div class="panel-footer" id="profile_panel_footer">
                <a href="mailto:email@example.com?Subject=Bike/Ped%20Count" target="_top" data-original-title="Broadcast Message" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-envelope"></i></a>
                <span class="pull-right">
                  <button type="submit" class="btn btn-success">Submit</button>
                </span>
              </div>
              <% end %>
          </div>
        </div>
      </li>
      <!-- pedestrians panel end -->

    </ul>
    </div>
    </div>
  </div>
</div>
<!-- accordion end -->
