    <%= f.label :disabled, "Disabled?" %><br>
    <%= f.radio_button(:disabled, true) %>
    <%= f.label(:disabled_true, "Yes") %>
    <%= f.radio_button(:disabled, false) %>
    <%= f.label(:disabled_false, "No") %>
  </div>
  <div class="field">
    <%= f.label :other, "Other (e.g., rollerblades, segways)" %>
    <%= f.check_box :other %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
